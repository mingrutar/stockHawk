<resources>
    <style name="Base.Theme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme" parent="Base.Theme">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- for TextView -->
    <style name="ListItemBaseTextStyle" parent="Base.DialogWindowTitle.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="PercentChangeTextStyle" parent="ListItemBaseTextStyle" >
        <item name="android:layout_width">145sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">end|right</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>
    <style name="BidPriceTextStyle" parent="ListItemBaseTextStyle">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_toStartOf">@+id/change</item>

    </style>
    <style name="StockSymbolTextStyle" parent="ListItemBaseTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <!-- text -->
    <style name="BaseTitleText" parent="Base.DialogWindowTitle.AppCompat" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginLeft">@dimen/default_gap</item>
        <item name="android:layout_marginStart">@dimen/default_gap</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="DetailTitle" parent="BaseTitleText" >
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="DetailName"  parent="BaseTitleText">
        <item name="android:textColor">@color/grey_100</item>
        <item name="android:textSize">10sp</item>
    </style>
     <!-- grid item -->
    <style name="GridItemBaseTextStyle" parent="Base.DialogWindowTitle.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DetailMainHeader" parent="GridItemBaseTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:paddingEnd">@dimen/default_gap</item>
        <item name="android:paddingRight">@dimen/margin_4dp</item>
        <item name="android:gravity">center_vertical|end|right</item>
    </style>
    <style name="DetailHeader" parent="GridItemBaseTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">@color/grey_100</item>
    </style>
    <style name="DetailData" parent="GridItemBaseTextStyle">
        <item name="android:layout_width">@dimen/value_text_width</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- widget -->
    <style name="BaseWidgetTextStyle" parent="Base.DialogWindowTitle.AppCompat">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="WidgetStockSymbolTextStyle" parent="BaseWidgetTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="WidgetBidPriceTextStyle" parent="BaseWidgetTextStyle">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="WidgetPercentChangeTextStyle" parent="BaseWidgetTextStyle" >
        <item name="android:textStyle">bold</item>
    </style>

</resources>
