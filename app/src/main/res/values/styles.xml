<resources>
    <style name="Base.Theme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme" parent="Base.Theme">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- main TextView -->
    <style name="ListItemBaseTextStyle" parent="Base.DialogWindowTitle.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/textNormal</item>
    </style>
    <style name="PercentChangeTextStyle" parent="ListItemBaseTextStyle" >
        <item name="android:layout_width">140sp</item>
        <item name="android:gravity">end|right</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>
    <style name="BidPriceTextStyle" parent="ListItemBaseTextStyle">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_toStartOf">@+id/change</item>
    </style>
    <style name="StockSymbolTextStyle" parent="ListItemBaseTextStyle">
        <item name="android:textSize">@dimen/textLarger</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <!-- detail text -->
    <style name="BaseTextStyle" parent="@android:style/Widget.TextView" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">@dimen/gap_4dp</item>
        <item name="android:paddingRight">@dimen/gap_4dp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="NumText" parent="BaseTextStyle" >
        <item name="android:layout_width">@dimen/edit_view_width</item>
        <item name="android:layout_height">@dimen/size_large</item>
        <item name="background">@color/primary_light</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="DetailHead" parent="BaseTextStyle" >
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSmall</item>
    </style>
    <style name="DetailData"  parent="BaseTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- widget -->
    <style name="BaseWidgetTextStyle" parent="Base.DialogWindowTitle.AppCompat">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="WidgetStockSymbolTextStyle" parent="BaseWidgetTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="WidgetBidPriceTextStyle" parent="BaseWidgetTextStyle">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="WidgetPercentChangeTextStyle" parent="BaseWidgetTextStyle" >
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Spinner STUPID
<style name="mySpinnerItemStyle" parent="@android:style/Widget.TextView.SpinnerItem">
    <item name="android:textColor">@color/accent</item>
</style>
<style name="mySpinnerItemStyle.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
    <item name="android:textColor">@color/accent</item>
</style>      -->
    <!-- style name="mySpinnerItemStyle" parent="@style/Widget.AppCompat.TextView.SpinnerItem" -->
    <style name="mySpinnerItemStyle" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:gravity">right|end</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/accent</item>
    </style>



</resources>
